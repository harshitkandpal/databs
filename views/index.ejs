<%- include('layout/header')   %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert"> 
                    <button class="btn-close" type="button" data-bs-dismiss='alert' aria-label='Close'></button>
                    <strong><%= message.message %></strong>
                </div> 
            <% } %>
            <div class="table-responsive">
                <% if (users !='') { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>Id</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-mail</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row,index) => { %>
                                <tr>
                                    <td><%= index %></td>
                                    <td><img src="<%= row.image %>" width="50" class="image-thumbnail" alt=""></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-la mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-la mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No user Found</h1>
                <% } %>    
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer')   %>
